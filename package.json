{
  "name": "primer-primitives-vscode-extension",
  "version": "0.0.1",
  "displayName": "VSCode extension for Primer primitives",
  "description": "VSCode extension for Primer primitives",
  "publisher": "siddharthkpgithub",
  "engines": {
    "vscode": "^1.79.0"
  },
  "keywords": [],
  "categories": [],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/primer/primitives-vscode-extension.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts src/language-server.ts --format cjs --external vscode --minify",
    "clean": "rm -rf dist",
    "lint": "eslint ./src --ext .ts --fix",
    "package:prepublish": "npm run build",
    "package": "vsce package --pre-release",
    "deploy": "vsce publish",
    "test": "vitest"
  },
  "prettier": "@github/prettier-config",
  "dependencies": {
    "@primer/primitives": "^11.2.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.flatten": "^4.4.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "@github/prettier-config": "^0.0.6",
    "@types/node": "^18.7.13",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-github": "^4.8.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2",
    "vitest": "^4.0.4",
    "vsce": "^2.10.2",
    "vscode-languageclient": "^8.0.2"
  }
}
