{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Client",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach language server",
      "address": "localhost",
      "port": 6011,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"]
    }
  ]
}
