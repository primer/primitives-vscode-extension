{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2019"],
    "outDir": "out",
    "rootDir": "src",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "src/utils"],
  "exclude": ["node_modules", "dist"]
}
